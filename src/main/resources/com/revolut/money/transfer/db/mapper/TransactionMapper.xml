<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.revolut.money.transfer.db.mapper.TransactionMapper">

    <insert id="create"
            parameterType="com.revolut.money.transfer.model.Transaction"
            useGeneratedKeys="true"
            keyProperty="transactionId" keyColumn="transaction_id">
        insert into transaction(from_account, to_account, amount, transfer_date, status)
        values (#{fromAccountId}, #{toAccountId}, #{amount}, #{transferDate}, #{status})
    </insert>

    <select id="readUserIncomingTransactions"
            resultType="java.util.List"
            resultMap="readTransactionResultMap">
        select transaction_id, from_account, to_account, amount, transfer_date, status
        from transaction  where to_account = #{accountId}
    </select>

    <select id="readUserOutgoingTransactions"
            resultType="java.util.List"
            resultMap="readTransactionResultMap">
        select transaction_id, from_account, to_account, amount, transfer_date, status
        from transaction where from_account = #{accountId}
    </select>

    <resultMap id="readTransactionResultMap" type="com.revolut.money.transfer.model.Transaction">
        <id property="transactionId" column="transaction_id"/>
        <result property="fromAccountId" column="from_account"/>
        <result property="toAccountId" column="to_account"/>
        <result property="amount" column="from_account"/>
        <result property="transferDate" column="transfer_date"/>
        <result property="status" column="status"/>
    </resultMap>

</mapper>